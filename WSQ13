#include <iostream>
#include <cmath>
using namespace std;
float sqrt (int r, int x)
{
  int i;
  for (i<x; i=0; i++) {
   sqrt=(r+(x/r))/2;
   return sqrt;
  } if (r*r==x) {
   return r;
   }
}
int main ()
{
  int x, r;
  cout<<"We are going to calculate the square root of a number using the Babylonian method."<<endl;
  cout<<"Write the value you want to get the square root of: "; cin>>x;
  cout<<"Now make an educated guess of the square root: "; cin>>r;
  cout<<sqrt(r,x)<<endl;
  return 0;
 }
